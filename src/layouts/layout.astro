---
interface Props {
    title: string;
    description: string;
}

const { title } = Astro.props;
---

<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link rel="icon" href="/favicon.ico" type="image/svg+xml" />
        <title>{title}</title>
    </head>
    <body class="bg-[#D2D2D2]">
        <slot />
    </body>
</html>
