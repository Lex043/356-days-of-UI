---
import { Image } from "astro:assets";
import Logo from "../images/Logo.png";
---

<section class="rounded-xl h-full bg-[#FFFFFF] px-4 py-2">
    <div class="w-11 h-10 p-3 rounded-full bg-[#30D1581A]">
        <Image src={Logo} alt="Logo illustration" class="w-full h-4" />
    </div>

    <div class="py-3 flex items-center gap-2">
        <div class="shrink-0 w-3 h-3 bg-[#5DD97F] rounded-sm"></div>
        <div class="shrink-0 w-3 h-3 bg-[#FFCC00] rounded-sm"></div>
        <div class="shrink-0 w-3 h-3 bg-[#FFCC00] rounded-sm"></div>
        <div class="shrink-0 w-3 h-3 bg-[#5DD97F] rounded-sm"></div>
        <div class="relative border-2 border-[#5DD97F] rounded-md w-5 h-5">
            <div
                class="absolute top-1/2 left-1/2 w-3 h-3 bg-[#5DD97F] rounded-sm transform -translate-x-1/2 -translate-y-1/2"
            >
            </div>
        </div>

        <div class="shrink-0 w-3 h-3 bg-[#E5E5EA] rounded-sm"></div>
        <div class="shrink-0 w-3 h-3 bg-[#E5E5EA] rounded-sm"></div>
    </div>

    <div>
        <h1 class="text-[#7F7F7F] text-xs">SPEND TODAY</h1>
        <h1 class="text-black font-bold text-2xl">$124.34</h1>
        <h1 class="text-[#34C759]">Avarage amount</h1>
    </div>
</section>
